<!DOCTYPE html>
<!--[if lt IE 7]>
<html class="lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>
<html class="lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>
<html class="lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html> <!--<![endif]-->
{{include "head"}}
<body>
<!-- Start Content -->
{{include "top"}}
<div id="content-wrap"  class="container-fluid fixed top-menu">


    <div id="content">

        <ul class="breadcrumb">
            <li><a href="/" class="glyphicons home"><i></i> ${__('CommonHome')}</a></li>
            <li class="divider"></li>
            <li>${__('ActivateActivate')}</li>
        </ul>
        <div class="separator bottom"></div>

        <h3 class="glyphicons show_thumbnails_with_lines"><i></i> ${__('ActivateTitle')}</h3>

        <form class="form-horizontal" style="margin-bottom: 0;" id="activateForm" method="post" autocomplete="off">
            <h4>${__('ActivateSubtitle')}</h4>
            <hr class="separator line"/>
            <div class="row-fluid">
                <div class="span6">
                    <div class="control-group">
                        <label class="control-label" for="code">${__('ActivateCode')}</label>

                        <div class="controls"><input class="span12" id="code" name="code" type="text" value="${code}"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="separator"></div>

            <div class="form-actions">
                <button type="submit" class="btn btn-icon btn-primary glyphicons circle_ok"><i></i>${__('ActivateContinue')}
                </button>
            </div>
        </form>
    </div>
</div>

<!-- jQuery Validate -->
<script src="theme/scripts/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
<script src="theme/scripts/jquery-form/jquery.form.js" type="text/javascript"></script>
<script src="js/activate.js" type="text/javascript"></script>

{{include "footer"}}
<div id="modal" class="modal hide fade" role="dialog">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3></h3>
    </div>
    <div class="modal-body">
    </div>
    <div class="modal-footer">
        <button class="btn btn-block btn-icon glyphicons circle_exclamation_mark" data-dismiss="modal"><i></i> Закрыть
        </button>
        <button class="btn btn-block btn-primary btn-icon glyphicons ok"><i></i> Продолжить</button>
    </div>
</div>
</body>
</html>

