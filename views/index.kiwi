                    </div>
                    <div class="well">
                        ${__('BonusBalance')}<strong data-bind="text : data.balance">0.00</strong>
                    </div>
                </div>
            </div>
            <a href="#/history" class="glyphicons list single"><i></i> ${__('BonusDetails')}</a>
        </div>
    </div>
</script>

